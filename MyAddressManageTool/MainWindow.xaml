<Window x:Class="MyAddressManageTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyAddressManageTool"
        mc:Ignorable="d"
        Title="住所管理ツール - メニュー" Height="450" Width="400">
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Grid Width="380">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Width="380" Margin="0,10,0,10" >
                <Button x:Name="GoHostInfoManage" Content="ホスト情報管理" Width="360" Click="GoHostInfoManage_Click" />
                <Button x:Name="GoSetting" Content="設定" Width="360" Click="GoSetting_Click"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
